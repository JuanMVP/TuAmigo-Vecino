<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editNumbers"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="@android:color/background_dark"
        android:ems="10"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        tools:text="0" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonEliminarNumero"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasOperaciones"
            android:src="@drawable/ic_delete"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonBorrarUno"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasOperaciones"
            android:text="C"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonDividir"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasOperaciones"
            android:text="/"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonMultiplicar"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasOperaciones"
            android:text="*"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasNormales"
            android:text="7"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasNormales"
            android:text="8"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button9"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasNormales"
            android:text="9"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonResta"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasOperaciones"
            android:text="-"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasNormales"
            android:text="4"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasNormales"
            android:text="5"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasNormales"
            android:text="6"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonSuma"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclasOperaciones"
            android:text="+"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/teclasNormales"
                    android:text="1"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/teclasNormales"
                    android:text="2"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/teclasNormales"
                    android:text="3"
                    android:textColor="@android:color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="185dp"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/teclasNormales"
                    android:text="0"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/buttonComa"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/teclasNormales"
                    android:text="."
                    android:textColor="@android:color/white" />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/teclaIgual"
            android:text="="
            android:textColor="@android:color/white" />


    </LinearLayout>


</LinearLayout>

